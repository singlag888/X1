    <script type="text/javascript">
        $(document).ready(function () {
            init;//初始化

            $(".mesBg").height($(document).height());//背景遮罩层
            $(".mesBox").hide();

            var click = true; //控制在一次抽奖结束前下次点击无效
            var index; //控制的抽奖结束后效果的还原

            $(".button a").click(function () {
                //进行判断是否抽奖完毕
                if (click != true) {
                    return false;
                }
                click = false;

                // 判断活动是否开始
                if (init.nowTime < init.promoStartTime || init.nowTime > init.promoEndTime ) {
                    parent.layer.alert(init.tips[403].msg);
                    click = true;
                    return false;
                }

                // 判断抽奖次数
                if (init.remainRunCount <= 0) {
                    parent.layer.alert(init.tips[402].msg);
                    click = true;
                    return false;
                }

                // 判断流水是否足够
                if (init.userRemainWater < init.eachLotterySpendWater) {
                    parent.layer.alert(init.tips[401].msg);
                    click = true;
                    return false;
                }

                //抽奖完后将图片还原到初始状态
                if (index != 1) {
                    $(".cjtab td img").parent().removeClass();
                }

                // 这里开始进行ajax。返回的值传参给图片轮播
                lottery();

                var i = 1; //图片轮播的地方
                var T = 1; //控制转了多少圈才停下来的变量
                var time = setInterval(function () {
                    i++;
                    //控制图片轮播的范围（24张图片）
                    if (i > 24) {
                        i = 1;
                        T++;
                    };
                    index = i;

                    //此处为图片的滚动
                    $(".cjtab td img").parent().removeClass();
                    $("#img" + i).parent().addClass("on");
                    //当滚动3圈后开始出奖
                    if (T == init.cycleCount) {
                        if (init.award != '') {
                            if (i == init.award.position) {
                                clearInterval(time);
                                var myPrize = "<tr><td>" + init.award.prize_time 
                                            + "</td><td>" + init.award.title
                                            + "</td><td>" + init.award.prize + "元</td></tr>";
                                $("#img" + i).parent().addClass("jggg");
                                $(".mestext .strg strong").html(init.award.prize);
                                setTimeout(function(){
                                    click = true;
                                    $("#img" + i).parent().removeClass("jggg");
                                    $(".mesBox").fadeIn(200);
                                    // 在我的奖品中插入一条
                                    $(".pz_main tbody").prepend(myPrize);
                                    // 修改用户的可用流水和抽奖次数
                                    $("#remainWater").html(init.userRemainWater);
                                    $("#runCount").html(init.remainRunCount);
                                    init.award = '';
                                }, 2500);
                            }
                        } else {
                            clearInterval(time);
                            click = true;
                            parent.layer.alert(init.msg);
                        }
                    }
                }, 100)
            });
            $(".mestext a").click(function () {
                $(".mesBox").fadeOut(200);
            });
         });

        $(function(){
            //中奖轮播滚动
            var liIndex = $("#news ul li").length;
            if(liIndex > 7){
              var $this = $("#news");
              var scrollTimer;
              $this.hover(function() {
                  clearInterval(scrollTimer);
              }, function() {
                  scrollTimer = setInterval(function() {
                      scrollNews($this);
                  }, 2000);
              }).trigger("mouseleave");

              function scrollNews(obj) {
                  var $self = obj.find("ul");
                  var lineHeight = $self.find("li:first").outerHeight();
                  $self.animate({
                      "marginTop": -lineHeight + "px"
                  }, 600, function() {
                      $self.css({
                          marginTop: 0
                      }).find("li:first").appendTo($self);
                  })
              }
            }

            //平滑滚动
            $('.sup_star a').click(function() {
                $('html,body').animate({
                    scrollTop:$('.luck').offset().top
                }, 500);
            });

            if (init.nowTime >= init.promoStartTime) {
                remve();
            }
            function remve(){//即将启幕,开始后删除
                $("#j_grayscale,#c_grayscale,.sup_star,.cj_star,script[src='js/grayscale.js']").remove();
                $('.nodeat,.nodeat *,.noda,.noda *,.noda .button a,.cj_star .button a').removeAttr("style");
                $(".bgnone").removeClass("bgnone");
            };

            // 开始滚动
            function startScroll() {
                if (ismove_jx){
                    time=setInterval(scrollUp, 20);//滚动速度
                    jianxie.scrollTop(jianxie.scrollTop() + 1);
                }
            };
            // 向上滚动
            function scrollUp() {
                if(jianxie.scrollTop() % 38==0) {
                    clearInterval(time);
                    setTimeout(startScroll, 500);//停留时间
                } else {
                    jianxie.scrollTop(jianxie.scrollTop() + 1);
                    if (jianxie.scrollTop() >= demo1_jx.height()) {
                        jianxie.scrollTop(0);
                    }
                }
            };
        });

        var init = {
            nowTime: <?php echo time();?>,
            promoStartTime: <?php echo strtotime($promoStartTime); ?>,
            promoEndTime: <?php echo strtotime($promoEndTime); ?>,
            tips: <?php echo $tips; ?>,
