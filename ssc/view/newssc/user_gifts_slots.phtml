            lotteryUrl: '/?c=user&a=userGifts&giftType=slots',
            award: '',
            msg: '',
        };

        var lottery = function() {
            $.ajax({
                type: "POST",
                url: init.lotteryUrl,
                data: {'sa': 'lottery'},
                dataType: "json", //返回错误号和用户流水
                cache : false,
                async : true,
                timeout : 5000,   //超时10S
                success: function(data){
                    if (data.errno > 0) {
                        init.award = '';
                        init.msg = data.msg;
                        return false;
                    }
                    else {
                        init.award = data.award;
                        init.remainRunCount = init.maxLotteryNum - data.runCount;
                        init.userRemainWater = data.userWater;
                        return true;
                    }
                },
                error: function() {
                    init.msg = '网络错误，请刷新页面';
                    return false;
                }
            });
        };
